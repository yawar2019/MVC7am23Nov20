@model MVC7am23Nov20.Models.EmpDept
@{
    ViewBag.Title = "SendEmpDeptinfo";
}

<h2>SendEmpDeptinfo</h2>

<table class="table table-striped">
    <tr>
        <th>EmpId</th>
        <th>EmpName</th>
        <th>EmpSalary</th>
    </tr>
    @foreach (var item in Model.Emp)
    {
        <tr>
            <td>
                @item.EmpId
            </td>
            <td>
                @item.EmpName
            </td>
            <td>
                @item.EmpSalary
            </td>
        </tr>
    }
</table>

<br />

DeptId:@Model.dept.DeptId<br />
DeptName:@Model.dept.DeptName<br />
